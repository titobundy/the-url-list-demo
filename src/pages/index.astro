---
import Layout from '../layouts/Layout.astro';
import UrlistWelcome from '../components/UrlistWelcome.astro';
import prisma from '../lib/prisma';

// Fetch all lists from the database
const lists = await prisma.list.findMany({
  orderBy: { createdAt: 'desc' }
});
---

<Layout title="Urlist - Share Your URL Collections">
  <UrlistWelcome />

  <section class="mb-12">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-gray-800">Recent Lists</h2>
    </div>

    {lists.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {lists.map((list) => (
          <a href={`/lists/${list.slug}`} class="block">
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 hover:shadow-md transition-shadow h-full">
              <h3 class="text-xl font-semibold text-gray-800 mb-2">{list.title}</h3>
              {list.description && (
                <p class="text-gray-600 mb-4 line-clamp-2">{list.description}</p>
              )}
              <p class="text-sm text-gray-500 mt-auto">
                Created {new Date(list.createdAt).toLocaleDateString()}
              </p>
            </div>
          </a>
        ))}
      </div>
    ) : (
      <div class="text-center py-12 bg-gray-50 rounded-lg">
        <p class="text-xl text-gray-500">No lists have been created yet.</p>
        <p class="mt-2 text-gray-500">Be the first to create a list!</p>
      </div>
    )}
  </section>
</Layout>
